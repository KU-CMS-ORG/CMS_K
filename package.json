{
    "name": "cms_backend",
    "version": "1.0.0",
    "description": "canteen management system for KU",
    "main": "app.js",
    "scripts": {
        "test": "npm test",
        "dev": "DEBUG=* nodemon --exec node -r '@swc-node/register' -r 'tsconfig-paths/register' index.ts",
        "start": "DEBUG=* node index.js",
        "db:push": "npx prisma db push",
        "db:build": "prisma generate && prisma migrate deploy",
        "build": "rm -rf build && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./build",
        "lint:fix": "npx prettier --write .",
        "prepare": "husky install",
        "prisma:generate": "prisma generate"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@swc-node/core": "^1.10.0",
        "@swc-node/register": "^1.6.1",
        "@types/debug": "^4.1.7",
        "babel-preset-es2015": "^6.24.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "nodemon": "^2.0.20",
        "prettier": "2.8.2",
        "prisma": "^4.8.0",
        "tsconfig-paths": "^4.1.2",
        "tscpaths": "^0.0.9",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@koa/cors": "^4.0.0",
        "@koa/router": "^12.0.0",
        "@okta/jwt-verifier": "^1.0.0",
        "@prisma/client": "^4.8.0",
        "bcryptjs": "^2.4.3",
        "camelcase": "^7.0.1",
        "date-fns": "^2.29.3",
        "debug": "^4.3.4",
        "google-auth-library": "^8.7.0",
        "http-status": "^1.6.2",
        "joi": "^17.7.0",
        "jsonwebtoken": "^9.0.0",
        "koa": "^2.14.1",
        "koa-body": "^6.0.1",
        "koa-bodyparser": "^4.3.0",
        "koa-mount-routes": "^1.0.1",
        "koa-router": "^12.0.0",
        "mysql": "^2.18.1",
        "path": "^0.12.7",
        "uuid": "^9.0.0"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
